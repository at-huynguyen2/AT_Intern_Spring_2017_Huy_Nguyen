<div class="bg-white">
<table id="data-table" class="table table-striped table-bordered" cellspacing="0">
      <tr>
        <th>Số thứ tự</th>
        <th>Tên đội bóng</th>
        <th>Đánh gía</th>
        <th></th>
      </tr>
      <% count = 1 %>
      <% @teams.each do |item| %>
      <tr>
        <td><%= count%></td>
        <td><%= item.name_team %></td>
        <td><% if item.seed == true %>
              Đội hạt giống
            <% end %>
        </td>
        <td><button onclick="getIdTeam(<%= item.id %>, '<%= item.name_team %>', <%= @order %>)" data-dismiss="modal">Chọn</button></td>
      </tr>
      <% count += 1 %>  
      <% end %>
    </table> 
</div>    